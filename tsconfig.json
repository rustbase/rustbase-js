{
    "compilerOptions": {
        "target": "es2016",
        "module": "commonjs",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "outDir": "./dist",
        "declaration": true,
        "declarationMap": true,
        "removeComments": true,
        "baseUrl": ".",
        "paths": {
            "@engine/*": ["./src/engine/*"],
            "@mock/*": ["./src/mock/*"],
            "@src/*": ["./src/*"]
        }
    }
}
